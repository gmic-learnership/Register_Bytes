<Window x:Class="Rectify.StudentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rectify"
        mc:Ignorable="d"
        Title="Update Record" Height="500" Loaded="Window_Loaded"    BorderBrush="Blue" Icon="Media/Dvtlogo.png"  Width="400" Background="#FF1100FF" HorizontalAlignment="Center">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2" Margin="20,10,0,-10" >
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                <Button Content="Back" x:Name="btnBack" FontWeight="Bold"  Click="btnBack_Click"  RenderTransformOrigin="-0.092,0.044" Height="39" Width="58" Style="{StaticResource myButton}"   />
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Margin="-26,-24,0,0" HorizontalAlignment="Stretch"  Height="86" >
                <ContentControl x:Name="pageLogo" ContentTemplate="{StaticResource LogoTemplate}"  Margin="0,46,0,35" HorizontalAlignment="Right" Height="45" RenderTransformOrigin="1.539,-0.519" Width="190"/>
            </StackPanel>
            <ComboBox x:Name="cmbStudentMentor"  ItemsSource="{Binding}"  ItemTemplate="{StaticResource ClassTemplate}"
                 HorizontalAlignment="Left" Margin="106,194,0,0" VerticalAlignment="Top" Width="152"/>
        </Grid>
        <Label Height="23" Margin="50,20,30,20" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="88" Content=""/>
        <Label Height="23" Margin="22,117,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="88" Content="First Name     : "/>
        <Label Margin="22,159,0,0" Height="23" VerticalAlignment="Top" Width="108" HorizontalAlignment="Left" Content="Last Name     :" Grid.ColumnSpan="2"/>
        <Label Margin="17,200,0,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="108" Content="  Mentor :"/>
        <Label Margin="10,244,0,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="108" Content="Email Address :" RenderTransformOrigin="2.398,0.609"/>
        <Label Margin="60,359,0,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="108" Content="  Phone :" Grid.ColumnSpan="2"/>
        <Label Margin="50,272,0,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="108" Content="Address :" Grid.ColumnSpan="2"/>
        <Label Margin="30,310,0,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="108" Content="Date of Birth :" Grid.ColumnSpan="2"/>
        <TextBox Height="23" Margin="0,159,0,0" x:Name="txtFirstName" VerticalAlignment="Top" Width="153" HorizontalAlignment="Left" Grid.Column="1" />
        <TextBox Height="21" Margin="0,117,0,0" x:Name="txtLastname" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153" Grid.Column="1" />
        <Button Height="23" HorizontalAlignment="Left"   Margin="0,415,0,0" Content="Save" x:Name="btnOhk" VerticalAlignment="Top" Width="63" Click="ok_Click" Grid.Column="1"/>
        <Button Height="23" HorizontalAlignment="Left" Margin="97,415,0,0" x:Name="btncancel" VerticalAlignment="Top" Width="56" IsCancel="True" Grid.Column="1">Cancel</Button>
        <TextBox Height="23" Margin="0,359,0,0" x:Name="txtNumber" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153" Grid.Column="1" />
        <TextBox Height="23" Margin="0,282,0,0" x:Name="txtHome_Address" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153" Grid.Column="1" />
        <TextBox Height="23" Margin="0,251,0,0" x:Name="txtEmail" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153" Grid.Column="1" />
        <DatePicker x:Name="dtPicker" HorizontalAlignment="Left" Margin="0,316,0,0" VerticalAlignment="Top" Width="153" Grid.Column="1"/>

    </Grid>
</Window>
