<Window x:Class="Rectify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rectify"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800" Loaded="Window_Loaded">

    <Window.Resources>
        <DataTemplate x:Key="ClassTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=Firstname}"/>
                <TextBlock Text=""/>
                <TextBlock Text="{Binding Path=LastName}"/>
                <TextBlock Text=": ---"/>
                <TextBlock Text="{Binding Path=JobTitle}"/>

            </StackPanel>

        </DataTemplate>
    </Window.Resources>
    <Grid>

        <Grid Margin="10,0,0,27">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="myGrid" Grid.Column="2" Grid.Row="2" DataContext="{Binding ElementName=cmbMentorList, Path=SelectedItem}">
              

            </Grid>
            <TextBox Grid.Row="0" Grid.Column="0" x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="40,224,0,0" TextWrapping="Wrap" Text="{Binding FirstName}" VerticalAlignment="Top" Width="120"/>
            <ComboBox x:Name="cmbMentorList"
                  HorizontalAlignment="Stretch"
                  Height="23"                                
                  Margin="0,10,20,0"                
                  VerticalAlignment="Top"
                   ItemsSource="{Binding}" 
                      ItemTemplate="{StaticResource ClassTemplate}"
                  Width="Auto"
                  IsSynchronizedWithCurrentItem="True" Grid.Column="2" SelectionChanged="cmbMentorList_SelectionChanged"/>
            <ListView Height="Auto" Grid.Row="1"
                  HorizontalAlignment="Stretch"                  
                  Margin="25,0,10,0" x:Name="studentsList"
                  VerticalAlignment="Stretch"
                  Width="Auto" 
                      MouseDoubleClick="studentsList_MouseDoubleClick"
                  IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding}" Grid.ColumnSpan="3" Loaded="studentsList_Loaded" SelectionChanged="studentsList_SelectionChanged">


                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Width="75" Header="First Name"
                           DisplayMemberBinding="{Binding Path=FirstName}" />
                            <GridViewColumn Width="190" Header="Last Name"
                           DisplayMemberBinding="{Binding Path=LastName}" />

                            <GridViewColumn Width="190" Header="Email"
                           DisplayMemberBinding="{Binding Path=Email}" />

                            <GridViewColumn Width="90" Header="Date of Birth"
                                        DisplayMemberBinding="{Binding Path=DateOfBirth}"/>

                            <GridViewColumn Width="75" Header="Hours"
                                            DisplayMemberBinding="{Binding Path=HoursPerDay}"/>
                            
                            <GridViewColumn Width="75" Header="Attendance Date"
                                            DisplayMemberBinding="{Binding Path=AttendanceDate}"/>


                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView Height="Auto" Grid.Row="2"
                  HorizontalAlignment="Stretch"                  
                  Margin="36,24,91,0" x:Name="attendanceDetails"
                  VerticalAlignment="Stretch"
                  Width="Auto" 
                      MouseDoubleClick="studentsList_MouseDoubleClick"
                  IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding}" Grid.ColumnSpan="2">


                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Width="75" Header="Hours"
                           DisplayMemberBinding="{Binding Path=HoursPerDay}" />
                            <GridViewColumn Width="190" Header="AttendanceDate"
                           DisplayMemberBinding="{Binding Path=AttendanceDate}" />



                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <DatePicker  x:Name="datePicker" HorizontalAlignment="Left" Margin="36,20,0,0" VerticalAlignment="Top" Height="53" Width="176" SelectedDateChanged="DatePicker_SelectedDateChanged"/>
        </Grid>
    </Grid>
</Window>
