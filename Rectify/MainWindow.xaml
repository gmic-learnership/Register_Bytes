<Window x:Class="Rectify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rectify"
        mc:Ignorable="d"
        Title="Learnership Attendance Details" Height="500" Width="967"  Loaded="Window_Loaded" Foreground="#FF3D89D4" Background="#FF2800FF" Icon="Media/Dvtlogo.png">

    <Window.Resources>
        <DataTemplate x:Key="ClassTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=Firstname}"/>
                <TextBlock Text=""/>
                <TextBlock Text="{Binding Path=LastName}"/>
                <TextBlock Text=": ---"/>
                <TextBlock Text="{Binding Path=JobTitle}"/>

            </StackPanel>

        </DataTemplate>
    </Window.Resources>
    <Grid Margin="0,0,64,41">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="873*"/>
        </Grid.ColumnDefinitions>

        <Grid Margin="-10,0,10,27" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ContentControl x:Name="pageLogo" ContentTemplate="{StaticResource LogoTemplate}"  Grid.Column="2" VerticalAlignment="Center" Margin="157,10,10,79" HorizontalAlignment="Center" Height="45" Width="132"/>
            <TextBlock Text="Select Mentor :" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment ="Right"  VerticalAlignment="Bottom" Grid.Column="1" Margin="0,0,278,4" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="cmbMentorList"
                  HorizontalAlignment="Stretch"
                  Height="23"                                
                  Margin="40,101,10,0"                
                  VerticalAlignment="Top"
                  ItemsSource="{Binding}" 
                  ItemTemplate="{StaticResource ClassTemplate}"
                  Width="Auto"
                  IsSynchronizedWithCurrentItem="True" Grid.Column="2" SelectionChanged="cmbMentorList_SelectionChanged" RenderTransformOrigin="0.443,0.609"/>

            <ListView Height="Auto" Grid.Row="1"
                  HorizontalAlignment="Stretch"                  
                  Margin="171,1,-14,132" x:Name="studentsList"
                  VerticalAlignment="Stretch"
                  Width="Auto" 
                  MouseDoubleClick="studentsList_MouseDoubleClick"
                  IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding}" Grid.ColumnSpan="3" Loaded="studentsList_Loaded" SelectionChanged="studentsList_SelectionChanged" Grid.RowSpan="2">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Width="75" Header="First Name"
                           DisplayMemberBinding="{Binding Path=FirstName}" />
                            <GridViewColumn Width="190" Header="Last Name"
                           DisplayMemberBinding="{Binding Path=LastName}" />

                            <GridViewColumn Width="190" Header="Email"
                           DisplayMemberBinding="{Binding Path=Email}" />

                            <GridViewColumn Width="90" Header="Date of Birth"
                            DisplayMemberBinding="{Binding Path=DateOfBirth}"/>

                            <GridViewColumn Width="75" Header="Address"
                             DisplayMemberBinding="{Binding Path=Home_Address}"/>

                            <GridViewColumn Width="75" Header="Phone"
                            DisplayMemberBinding="{Binding Path=Phone}"/>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>

            <ListView Height="Auto" Grid.Row="2"
                  HorizontalAlignment="Stretch"                  
                  Margin="171,10,105,25" x:Name="attendanceDetails"
                  VerticalAlignment="Stretch"
                  Width="Auto" 
                  IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding}" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Width="75" Header="Hours"
                           DisplayMemberBinding="{Binding Path=HoursPerDay}" />
                            <GridViewColumn Width="190" Header="Attendance Date"
                           DisplayMemberBinding="{Binding Path=AttendanceDate}" />



                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBlock Text="Select Date" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="10,0,318,10" />
            <DatePicker  x:Name="datePicker" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="23" Width="156" SelectedDateChanged="DatePicker_SelectedDateChanged" Grid.Row="1"/>
        </Grid>
        <Button x:Name="button" Content="Delete" Grid.Column="1" HorizontalAlignment="Left" Height="38" Margin="682,323,0,0" VerticalAlignment="Top" Width="74" Click="btnDelete_Click"/>
        <Button x:Name="btnSave" Content="Save" Grid.Column="1" HorizontalAlignment="Left" Height="38" Margin="587,323,0,0" VerticalAlignment="Top" Width="74" Click="btnSave_Click"  />
        <Button x:Name="btnAdd" Content="Add" Grid.Column="1" HorizontalAlignment="Left" Height="38" Margin="481,323,0,0" VerticalAlignment="Top" Width="80" Click="btnAdd_Click"  />
    </Grid>
</Window>
